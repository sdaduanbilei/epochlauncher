<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="@dimen/itemWidth"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/itemIconSize"
        android:layout_height="@dimen/itemIconSize"
        android:layout_marginLeft="@dimen/itemIconMargin"
        android:layout_marginRight="@dimen/itemIconMargin"
        android:layout_gravity="center_vertical"
        android:scaleType="fitCenter"
        tools:suppress="ContentDescription"/>

    <LinearLayout
        android:layout_width="@dimen/detailedItemTextWrapperWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/detailedItemTextWrapperVerticalMargin"
        android:layout_marginBottom="@dimen/detailedItemTextWrapperVerticalMargin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text"
            android:layout_width="@dimen/itemTextWidth"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/detailedItemTextMarginBottom"
            android:textSize="@dimen/itemTextTextSize"/>

        <TextView
            android:id="@+id/details"
            android:layout_width="@dimen/detailedItemDetailsWidth"
            android:layout_height="wrap_content"
            android:textSize="@dimen/detailedItemDetailsTextSize"/>

    </LinearLayout>

</LinearLayout>
