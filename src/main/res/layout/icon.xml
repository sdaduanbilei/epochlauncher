<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/iconSize"
    android:layout_height="@dimen/iconSize">

    <ImageView
        android:id="@+id/base"
        android:layout_width="@dimen/iconBaseSize"
        android:layout_height="@dimen/iconBaseSize"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"/>

    <ImageView
        android:id="@+id/item"
        android:layout_width="@dimen/iconItemSize"
        android:layout_height="@dimen/iconItemSize"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"
        android:src="@drawable/circle"/>

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/iconIconSize"
        android:layout_height="@dimen/iconIconSize"
        android:layout_centerInParent="true"
        android:scaleType="fitCenter"/>

</RelativeLayout>
