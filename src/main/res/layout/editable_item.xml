<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/itemWidth"
    android:layout_height="@dimen/itemHeight"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/itemIconSize"
        android:layout_height="@dimen/itemIconSize"
        android:layout_marginTop="@dimen/itemIconMargin"
        android:layout_marginLeft="@dimen/itemIconMargin"
        android:layout_marginRight="@dimen/itemIconMargin"
        android:scaleType="fitCenter"/>

    <EditText
        android:id="@+id/text"
        android:layout_width="@dimen/itemTextWidth"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/itemTextMarginTop"
        android:textSize="@dimen/itemTextTextSize"
        android:inputType="text"
        android:background="@android:color/transparent"/>

</LinearLayout>
